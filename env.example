# MCP Meta-Orchestrator Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API CREDENTIALS - Required for MCP functionality
# =============================================================================

# Perplexity API Configuration
# Get your API key from: https://perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# OpenAI API Configuration (if using OpenAI models)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Configuration (if using Claude models)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI API Configuration (if using Gemini models)
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# =============================================================================
# CREDENTIAL STORAGE CONFIGURATION
# =============================================================================

# Credential Storage Method
# Options: 'system-keychain', 'encrypted-config', 'env-file'
CREDENTIAL_STORAGE=encrypted-config

# Encryption Key for Credential Storage
# Generate a strong key using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Or use the credential manager: npm run generate-encryption-key
ENCRYPTION_KEY=your_encryption_key_here

# Credential Storage Location (for file-based storage)
CREDENTIAL_STORAGE_PATH=~/.mcp-hub/credentials.json

# =============================================================================
# REGISTRY AND CACHE CONFIGURATION
# =============================================================================

# MCP Registry Path
MCP_REGISTRY_PATH=~/.mcp-hub/registry.json

# Cache TTL in seconds (86400 = 24 hours)
CACHE_TTL=86400

# Cache Storage Location
CACHE_STORAGE_PATH=~/.mcp-hub/cache/

# =============================================================================
# AUTO-INSTALLATION SETTINGS
# =============================================================================

# Enable automatic MCP installation
AUTO_INSTALL_MCPS=true

# Installation timeout in milliseconds (300000 = 5 minutes)
INSTALL_TIMEOUT=300000

# Default installation directory
INSTALL_DIRECTORY=~/.mcp-hub/mcps/

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level: debug, info, warn, error
LOG_LEVEL=info

# Log File Path
LOG_FILE=~/.mcp-hub/logs/mcp-hub.log

# Enable Console Logging
CONSOLE_LOGGING=true

# Log Rotation Settings
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable Security Audit Logging
SECURITY_AUDIT_ENABLED=true

# Security Audit Log Path
SECURITY_AUDIT_LOG=~/.mcp-hub/logs/security-audit.log

# Maximum Audit Log Entries
MAX_AUDIT_ENTRIES=1000

# Enable Credential Validation
CREDENTIAL_VALIDATION_ENABLED=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Environment: development, staging, production
NODE_ENV=development

# Enable Debug Mode
DEBUG=false

# Enable Development Tools
DEV_TOOLS_ENABLED=false

# Hot Reload for Development
HOT_RELOAD=false

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# HTTP Proxy (if needed)
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=https://proxy.company.com:8080

# Request Timeout in milliseconds
REQUEST_TIMEOUT=30000

# Maximum Retry Attempts
MAX_RETRY_ATTEMPTS=3

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# MCP Server Port
MCP_SERVER_PORT=3000

# MCP Server Host
MCP_SERVER_HOST=localhost

# Enable MCP Server
MCP_SERVER_ENABLED=true

# MCP Server Authentication
MCP_SERVER_AUTH_ENABLED=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable Advanced Features
ADVANCED_FEATURES_ENABLED=false

# Enable Experimental Features
EXPERIMENTAL_FEATURES_ENABLED=false

# Enable Beta Features
BETA_FEATURES_ENABLED=false

# =============================================================================
# MONITORING AND METRICS
# =============================================================================

# Enable Metrics Collection
METRICS_ENABLED=false

# Metrics Export Interval (seconds)
METRICS_EXPORT_INTERVAL=60

# Enable Health Checks
HEALTH_CHECKS_ENABLED=true

# Health Check Interval (seconds)
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Enable Automatic Backups
AUTO_BACKUP_ENABLED=true

# Backup Interval (hours)
BACKUP_INTERVAL=24

# Backup Retention Days
BACKUP_RETENTION_DAYS=30

# Backup Storage Location
BACKUP_STORAGE_PATH=~/.mcp-hub/backups/

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Enable Notifications
NOTIFICATIONS_ENABLED=false

# Notification Methods: email, webhook, slack
NOTIFICATION_METHODS=email

# Email Configuration (if using email notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# NOTIFICATION_EMAIL=admin@company.com

# Webhook URL (if using webhook notifications)
# WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Add your custom configuration variables here
# CUSTOM_VAR_1=value1
# CUSTOM_VAR_2=value2

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 
# 1. NEVER commit the actual .env file to version control
# 2. Use strong, unique encryption keys
# 3. Regularly rotate API keys and encryption keys
# 4. Monitor audit logs for suspicious activity
# 5. Use environment-specific configurations
# 6. Keep this file secure and limit access
# 7. Use credential manager for sensitive data storage
# 8. Enable security audit logging in production
#
# =============================================================================

